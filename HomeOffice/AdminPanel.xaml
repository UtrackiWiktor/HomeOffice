        <TextBox Name="UserName" Margin="10,27,248.333,365"></TextBox>
        <TextBox Name="UserSurname" Margin="188,27,70.333,365"></TextBox>
        <TextBox x:Name="UserDate" Margin="366,27,253,365" Grid.ColumnSpan="2"/>
        <Button Name="AddUser" Margin="112.667,81,75,309" Grid.Column="1">Add User to Database</Button>
        <ComboBox HorizontalAlignment="Left" Margin="113,27,0,0" VerticalAlignment="Top" Width="173" Grid.Column="1" Height="27">
            <ComboBoxItem Content="Employee" HorizontalAlignment="Left" Width="171"/>
            <ComboBoxItem Content="Manager" HorizontalAlignment="Left" Width="171"/>
            <ComboBoxItem Content="Administrator" HorizontalAlignment="Left" Width="171"/>
        </ComboBox>


    </Grid>

</Window>
