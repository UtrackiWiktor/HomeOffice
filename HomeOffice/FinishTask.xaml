<Window x:Class="HomeOffice.FinishTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeOffice"
        mc:Ignorable="d"
        Title="FinishTask" Height="450" Width="800">
    <Grid>
        <DataGrid Name="windowList" Margin="10,10,10.333,19.667" Loaded="windowList_Loaded" CanUserAddRows="false">
            <DataGrid.ContextMenu>
                <ContextMenu>

                    <MenuItem Header="Mark as done/undone" Click="DoneUndone_Click"/>
                    <MenuItem Header="Show more info" Click="ShowMyActivity"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</Window>
